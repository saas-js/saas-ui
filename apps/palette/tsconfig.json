{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "@saas-ui/react": ["../../packages/saas-ui-react/src"],
      "@saas-ui/react/colors": ["../../packages/saas-ui-react/src/colors.ts"],
      "@saas-ui/palette": ["../../packages/saas-ui-palette/src"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "customConditions": ["sui"]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "cypress"]
}
