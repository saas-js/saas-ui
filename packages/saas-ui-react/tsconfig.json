{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "customConditions": ["sui"],
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo.json",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "paths": {
      "#components/*": ["src/components/*"],
      "#types": ["src/types.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "../saas-ui-core",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*/*.stories.tsx"
  ]
}
