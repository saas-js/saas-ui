{
  "name": "@saas-ui/forms",
  "version": "3.0.0-next.45",
  "description": "Fully functional forms for Chakra UI.",
  "exports": {
    ".": {
      "sui": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./zod": {
      "sui": "./dist/zod/index.ts",
      "require": "./dist/zod/index.js",
      "types": "./dist/zod/index.d.ts",
      "import": "./dist/zod/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf --no-glob ./dist",
    "build": "pnpm build:package && pnpm build:zod",
    "build:package": "tsup src/index.ts --config tsup.config.ts",
    "build:zod": "tsup zod/src/index.ts --config zod/tsup.config.ts",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --config ../../eslint.config.js",
    "lint:staged": "lint-staged --allow-empty --config ../../lint-staged.config.js",
    "typecheck": "tsc --noEmit",
    "tsd": "tsd"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "author": "Eelco Wiersma <eelco@saas-ui.dev>",
  "license": "MIT",
  "homepage": "https://saas-ui.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saas-js/saas-ui.git",
    "directory": "packages/saas-ui-forms"
  },
  "keywords": [
    "react",
    "ui",
    "chakra-ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "emotion",
    "library",
    "design-system",
    "forms",
    "react-hook-form"
  ],
  "storybook": {
    "title": "Saas UI",
    "url": "https://storybook.saas-ui.dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@saas-ui/core": "workspace:*",
    "@saas-ui/react": "workspace:*",
    "@standard-schema/spec": "^1.0.0",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@chakra-ui/react": "3.27.0",
    "@emotion/react": ">=11.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "tsd": "^0.33.0",
    "tsup": "^8.5.0",
    "typescript": "5.9.3",
    "zod": "^3.25.76"
  },
  "tsd": {
    "directory": "tests"
  }
}
